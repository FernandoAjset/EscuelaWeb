@model EscuelaWeb.Models.Asignatura

@{
    ViewData["Title"] = "Crear asignatura";
}

<h2>@ViewData["Title"]</h2>
<p><i>@ViewBag.Fecha</i></p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarreraId" class="control-label">Carrera</label>
                <select asp-for="CarreraId" class="form-control" asp-items="ViewBag.CarreraId" id="Carreras" onChange="cambioCarrera();"></select>
                <input type="hidden" asp-for="CarreraId" id="IdCarrera" />
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre de la asignatura</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <button type="submit" class="btn btn-primary">Enviar</button>
                <a class="btn btn-info btn-primary-custom" asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script src="~/js/site.js"></script>
}
