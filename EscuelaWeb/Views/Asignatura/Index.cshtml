@model AsignaturasViewModel

@{
    ViewData["Title"] = "Información de las Asignaturas";
}

<h2>@ViewData["Title"]</h2>
<strong>Listado de todas las asignaturas</strong>
<p><i>@ViewBag.Fecha</i></p>
<p>
    <a class="btn btn-success btn-primary-custom" type="submit" asp-action="Create">Crear nueva asignatura</a>
</p>
<input type="hidden" value="@Model.PaginaActual" />
<table class="table table-sm table-hover">
    <thead class="thead-dark">
        <tr>
            <th scoope="col">Nombre carrera</th>
            <th scoope="col">Nombre asignatura</th>
            <th scoope="col">ID asignatura</th>
            <th scoope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listado)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Carrera.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-paginaactual="@Model.PaginaActual" asp-route-id="@item.Id">Editar<i class="bi bi-pencil-square"></i></a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-paginaactual="@Model.PaginaActual" asp-route-id="@item.Id">Borrar<i class="bi bi-trash3-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="_paginador" model=@Model />