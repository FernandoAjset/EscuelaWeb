@model EscuelaWeb.Models.Evaluacion

@{
    ViewData["Title"] = "Borrar evaluación";
}

<h2>@ViewData["Title"]</h2>
<p><i>@ViewBag.Fecha</i></p>
<h3>¿Esta seguro que desea eliminar la evaluación?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Alumno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alumno.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Asignatura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Asignatura.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nota)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nota)
        </dd>
        <dt class="col-sm-2">
            Tipo de evaluación
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoEvaluacion)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger btn-primary-custom" asp-action="Delete">Borrar</button>
        <a class="btn btn-info btn-primary-custom" asp-action="Index">Volver</a>
    </form>
</div>
