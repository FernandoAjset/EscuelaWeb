@model EscuelaWeb.Models.Asignatura

@{
    ViewData["Title"] = "Borrar Asignatura";
}
<h2>@ViewData["Title"]</h2>
<p><i>@ViewBag.Fecha</i></p>
<h3>¿Esta seguro que desea eliminar la asignatura?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <p>Nombre de asignatura</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            <p>ID de asignatura</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            <p>Carrera de la asignatura</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carrera.Nombre)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
@*        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>*@

        <a class="btn btn-info btn-primary-custom" asp-action="Index">Volver</a>
        <button type="submit" class="btn btn-danger btn-primary-custom" asp-action="Delete">Borrar</button>

    </form>
</div>
