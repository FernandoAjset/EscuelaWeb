@model Curso;
@{
    ViewData["Title"] = "Creación de Curso";
}
<h2>@ViewData["Title"]</h2>
<p><i>@ViewBag.Fecha</i></p>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="POST">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input class="form-control" asp-for="Nombre" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
        <br />
        <label asp-for="Jornada"></label>
        @Html.DropDownList(
        "Jornada",
        Html.GetEnumSelectList<TiposJornada>(),
        "Seleccione una jornada",
        new{@class="form-control"}
        )
        <span asp-validation-for="Jornada" class="text-danger"></span>
        <br />
        <button type="submit" class="btn btn-primary">Enviar</button>
        <a class="btn btn-info btn-primary-custom" asp-action="MultiCurso">Ver Cursos</a>
    </div>
</form>
@section Scripts{
<partial name="_ValidationScriptsPartial" />
}