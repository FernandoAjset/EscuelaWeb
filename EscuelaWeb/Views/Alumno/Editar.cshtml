@model Alumno;
@{
    ViewData["Title"] = "Edición de Alumno";
}
<h2>@ViewData["Title"]</h2>
<p><i>@ViewBag.Fecha</i></p>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="POST">
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input type="text" asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="CarreraId" class="control-label">Carrera</label>
                <select asp-for="CarreraId" class="form-control" asp-items="ViewBag.CarreraId"></select>
                <span asp-validation-for="CarreraId" class="text-danger"></span>
            </div>
            <br />
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
        <a class="btn btn-info btn-primary-custom" asp-action="MultiAlumno">Volver</a>
    </div>
</form>
