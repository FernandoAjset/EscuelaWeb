@model Alumno;
@{
    ViewData["Title"] = "Información Alumno";
}
<h2>@ViewData["Title"]</h2>
@{
    string mensajeExito = ViewBag.MensajeExito;
    string mensajeBorrado = ViewBag.MensajeBorrado;
    if (mensajeExito != null)
    {
        <div class="alert alert-success">
            <span>@ViewBag.MensajeExito</span>
        </div>
    }
    if (mensajeBorrado != null)
    {
        <div class="alert alert-danger">
            <span>@ViewBag.MensajeBorrado</span>
        </div>
    }
}
<p><i>@ViewBag.Fecha</i></p>
<p>
    Nombre: @Model.Nombre<br />
    Id alumno: @Model.Id
</p>
<a class="btn btn-info btn-primary-custom" asp-action="MultiAlumno">Ver Alumnos</a>